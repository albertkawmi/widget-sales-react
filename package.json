{
  "name": "widget-sales-react",
  "version": "0.1.0",
  "description": "A simple React web UI for widget-sales-api",
  "private": true,
  "engines": {
    "node": "8.9.x"
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "prop-types": "^15.6.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-router-dom": "4.2.2",
    "react-scripts": "1.0.17"
  },
  "scripts": {
    "start": "react-scripts start",
    "now-start": "cd build && serve -s ./",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:snapshots": "jest --updateSnapshot",
    "test:coverage": "npm test -- --coverage",
    "test:e2e": "jest --config e2e/jestConfig.json",
    "test:e2e:update": "webdriver-manager update --out_dir ../../e2e/selenium",
    "test:e2e:server": "webdriver-manager start --out_dir ../../e2e/selenium",
    "eslint": "eslint ./src",
    "eject": "react-scripts eject",
    "now": "now",
    "now:staging": "now --public",
    "now:production": "now alias $(now --public) widget-sales-react",
    "deploy": "npm run eslint && npm run test:coverage && npm run test:e2e && npm run build && npm run now:production"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/albertkawmi/widget-sales-react.git"
  },
  "keywords": [
    "react",
    "example"
  ],
  "author": "Albert Kawmi <albert@kawmi.co> (http://kawmi.co/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/albertkawmi/widget-sales-react/issues"
  },
  "homepage": ".",
  "devDependencies": {
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "now": "^9.1.0",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "serve": "^6.4.8",
    "webdriver-manager": "^12.0.6"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/registerServiceWorker.js",
      "!src/index.js",
      "!coverage/**",
      "!build/**",
      "!e2e/**"
    ]
  }
}
